@model FastFood.Web.ViewModels.Orders.CreateOrderViewModel

@{
    ViewData["Title"] = "Create Order";
}
<h1 class="text-center">Create Order</h1>
<hr class="bg-secondary half-width" />
<form class="mx-auto half-width" asp-controller="Orders" asp-action="Create" method="post">
    <div class="form-group">
        <label for="name">Customer</label>
        <input type="text" class="form-control" id="customer" placeholder="Customer..." name="customer">
    </div>
    <div class="form-group">
        <label for="employee">Employee</label>
        <select id="employee" class="form-control" name="EmployeeId">
            @for (int i = 0; i < Model.EmployeesIds.Length; i++)
            {
                <option value="@Model.EmployeesIds[i]">@Model.EmployeesNames[i]</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="item">Item</label>
        <select id="item" class="form-control" name="ItemId">
            @for (int i = 0; i < Model.ItemsIds.Length; i++)
            {
                <option value="@Model.ItemsIds[i]">@Model.ItemsNames[i]</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="number" step="1" min="1" class="form-control" id="quantity" placeholder="Quantity..." name="quantity">
    </div>
    <div class="form-group">
        <label for="orderType">Order Type</label><br>
        <input type="checkbox" id="orderType" name="orderType" value="ToGo"> To Go<br>
        <input type="checkbox" id="orderType" name="orderType" value="ForHere"> For Here<br>
    </div>
    <hr class="bg-secondary half-width" />
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn ">Create</button>
    </div>
</form>