<main>
    <form class="theater-form" action="/theater/edit/{{_id}}" method="POST">
        <h1>Edit Theater</h1>
        <div>
            <label for="title">Theater Title:</label>
            <input type="text" name="title" value="{{ title }}" placeholder="Theater name" value="">
        </div>
        <div>
            <label for="description">Theater Description:</label>
            <textarea name="description" placeholder="Description">{{description}}</textarea>
        </div>  
        <div>
            <label for="imageUrl">Image url:</label>
            <input type="text" name="imageUrl" value="{{ imageUrl }}" placeholder="Image Url" value="">
        </div>
        <div class="check">
            <input type="checkbox" name="isPublic" {{#if isPublic}} checked {{/if}} id="check-box">
            <label for="check-box">Public</label>
        </div>
        <button class="btn" type="submit">Submit</button>
    </form>
</main>