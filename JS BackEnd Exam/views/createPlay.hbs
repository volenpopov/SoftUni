<main>
    <form class="theater-form" action="/theater/create" method="POST">
        <h1>Create Theater</h1>
        <div>
            <label for="title">Theater Title:</label>
            <input type="text" name="title" value="{{ oldBody.title }}" placeholder="Theater name">
        </div>
        <div>
            <label for="description">Theater Description:</label>
            <textarea name="description" placeholder="Description">{{ oldBody.description }}</textarea>
        </div>
        <div>
            <label for="imageUrl">Image url:</label>
            <input type="text" name="imageUrl" value="{{ oldBody.imageUrl }}" placeholder="Image Url">
        </div>
        <div class="check">
            <input type="checkbox" name="isPublic" id="check-box">
            <label for="check-box">Public</label>
        </div>
        <button class="btn" type="submit">Submit</button>
    </form>
</main>