<main>
    <form action="/user/login" method="POST">
        <h2>Login</h2>
        <div>
            <label for="username">Username:</label>
            <input type="text" name="username" value="{{oldBody.username}}" placeholder="Username">
        </div>
        <div>
            <label for="password">Password:</label>
            <input type="password" name="password" value="{{oldBody.password}}" placeholder="Password">
        </div>

        <button class="btn" type="submit">Login</button>
    </form>
</main>

