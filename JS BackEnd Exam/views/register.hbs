<main>
    <form action="/user/register" method="POST">
        <h2>Register</h2>
        <div class="on-dark">
            <label for="username">Username:</label>
            <input type="text" name="username" value="{{oldBody.username}}" placeholder="Steven">
        </div>

        <div class="on-dark">
            <label for="password">Password:</label>
            <input type="password" name="password" value="{{oldBody.password}}" placeholder="********" value="">
        </div>

        <div class="on-dark">
            <label for="repeatPassword">Repeat Password:</label>
            <input type="password" name="repeatPassword" value="{{oldBody.repeatPassword}}" placeholder="********" value="">
        </div>

        <button class="btn" type="submit">Register</button>
    </form>
</main>

