<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article>
                <header>
                    <h2>{{title}}</h2>
                </header>

                <p>
                   Summary:  {{summary}}
                </p>

                <p>
                    {{content}}
                </p>

                Article image:
                <br/>
                <img src="{{imageUrl}}"/>

                <small class="author">
                    <div>
                        <a href="/user/details/{{this.id}}">{{this.User.fullName}}</a>
                    </div>
                </small>

                <footer>
                    <div class="pull-right">
                        <a class="btn btn-default btn-xs" href="/">Back &raquo;</a>
                    </div>
                </footer>
            </article>
        </div>
    </div>
</div>
